/* pages/auth/index.wxss */
page {
  display: flex;
  justify-content: center;
  background-color: #F9F9F9;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #9BA5AB;
}

.container image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* border: 2px solid red; */
  margin: 130rpx 0 36rpx;
}

.container .name {
  font-size: 32rpx;
}

.container .btn {
  display: block;
  width: 420rpx;
  height: 76rpx;
  line-height: 76rpx;
  font-size: 30rpx;
  font-weight: normal;
  color: #fff;
  text-align: center;
  background-color: #121212;
  color: #fff;
  padding: 0;
  margin: 200rpx 0 58rpx;
}

.container .agree-text {
  font-size: 24rpx;
  color: #2C3135;
}

.container .agree-text .link {
  /* color: #C1976B; */
}

/* 自定义checkbox 样式 */
checkbox {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border-color: #C1976B;
  position: relative;
  top: -4rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #fff;
  color: #C1976B;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  font-size: 30rpx;
}