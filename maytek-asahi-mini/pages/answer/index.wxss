.answer-index{
  position: relative;
  width: 100%;
  height: 100%;
}
.answer-index .bg-img{
  position: absolute;
  width: 100%;
  height: 100%;
}
.answer-index .body{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  text-align: center;
}
/* 题目序号 */
.answer-index .body .serial-num{
  font-size: 72rpx;
  color: #ba131d;
  margin: 125rpx 0 85rpx 0;
}
.answer-index .body .name{
  font-size: 36rpx;
  color: #2b2b2b;
  font-family: PingFang-SC-Bold;
  margin-bottom: 78rpx;
  font-weight: 600;
}
.answer-index .body .result .item{
  display: inline-block;
  width: 590rpx;
	height: 112rpx;
	line-height: 112rpx;
	background: linear-gradient(0deg, 
		#000000 0%, 
    #2b2b2b 100%);
  margin-bottom: 48rpx;
  position: relative;
}
.answer-index .body .result .item .status-img{
  width: 46rpx;
}
.answer-index .body .result .item.wrong{
  background-image:  linear-gradient(90deg,#ba131d,#ba131d 100%);
}
.answer-index .body .result .item.right .right-img{
  width: 100%;
  height: 100%;
}
  .answer-index .body .result .item.right .desc{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}

.answer-index .body .result .item .sort{
  font-size: 72rpx;
	color: #ffffff;
  opacity: 0.5;
  position: absolute;
  left: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}
.answer-index .body .result .item .text{
  font-size: 36rpx;
	color: #ffffff;
}
.answer-index .body .activity-rules{
  font-size: 28rpx;
  color: #2b2b2b;
  font-family: PingFang-SC-Bold;
  text-decoration: underline;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 100rpx;
}