<view class="answer-index">
  <image class="bg-img" src="../../images/comm/bg.png"></image>
  <view class="body">
    <view class="content" wx:for="{{answerList}}" wx:key="index">
      <block wx:if="{{currentIndex == (index+1)}}">
        <view class="serial-num">{{index+1}}/{{answerList.length}}</view>
        <view class="name">{{item.title}}</view>
        <view class="result" bindtap="handleSelectAnswer" data-item="{{item1}}" wx:for="{{item.resultList}}" wx:for-item="item1" wx:for-index="index1" wx:key="index1">
          <view class="item {{answerIndex == index1 && item1.isRight?'wrong':'right'}}"> <!--wrong right-->
            <!-- 选择正确答案后的背景图 -->
            <image class="right-img" wx:if="{{rightAnswer}}" src="../../images/comm/bg.png"></image>
            <view class="{{rightAnswer?'desc':''}}">
              <!-- 选项对错的图 x-->
              <image wx:if="{{!rightAnswer}}" class="sort status-img" mode="widthFix" src="../../images/answer/right.png"></image>
              <!-- <text class="sort">{{serialList[index1]}}</text> -->
              <text class="text">{{item1.title}}</text>
            </view>
          </view>
        </view>
        <!-- 测试 -->
