/* pages/receipt/result.wxss */
.wrap {
  width: 100%;
  height: 100%;
  padding-top: 130rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrap .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.wrap .text {
  font-size: 48rpx;
  text-align: center;
}

.bg1 image {
  width: 192rpx;
  height: 192rpx;
  margin-top: 124rpx;
  /* animation: rotate 500ms ease infinite;
  animation-fill-mode: forwards; */
}

.icon {
  width: 264rpx;
  height: 264rpx;
  margin: 204rpx 0 300rpx;
}

.btn {
  width: 480rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
  color: #FFFFFF;
  background: linear-gradient(360deg, #000000 0%, #2B2B2B 100%);
}


@keyframes rotate {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}