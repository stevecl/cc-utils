/* pages/lottery/result.wxss */
.wrap {
  width: 100%;
  height: 100%;
  padding-top: 130rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrap .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* main box */
.main {
  position: relative;
  width: 556rpx;
  height: 696rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 48rpx 0 46rpx;
  padding-top: 96rpx;
  box-sizing: border-box;
}

.main.center {
  padding-top: 0;
  justify-content: center;
}

.main .con {
  width: 360rpx;
  height: 360rpx;
  margin-bottom: 104rpx;
}

.main text {
  font-size: 24rpx;
  font-weight: 900;
}


/* 红包提现 */
.wrap .text {
  font-size: 48rpx;
  text-align: center;
}

.icon {
  width: 264rpx;
  height: 264rpx;
  margin: 204rpx 0 300rpx;
}

.btn {
  width: 480rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
  color: #FFFFFF;
  background: linear-gradient(360deg, #000000 0%, #2B2B2B 100%);
}

/* 填写收货地址 */
.edit-title {
  font-size: 48rpx;
  margin: 56rpx 0;
}