/* components/uploadReceipt/index.wxss */

/* 上传 */
.upload-text {
  width: 456rpx;
  font-size: 48rpx;
  color: #2B2B2B;
  margin: 30rpx auto 30rpx;
}

.upload-type {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.upload-type text {
  width: calc(50% - 10rpx);
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: #F5F5F5;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.upload-type text.selected {
  color: #fff;
  background: #BA131D;
}

.upload-main {
  position: relative;
  width: 598rpx;
  height: 246rpx;
  background: #F5F5F5;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-main image {
  width: 100%;
  height: 100%;
}

.upload-main .icon-select {
  width: 58rpx;
  height: 58rpx;
}

.upload-main .tools {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  display: flex;
  background-color: rgba(0, 0, 0, .3);
}

.upload-main .tools view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.upload-main .tools view.line {
  flex: unset;
  width: 2rpx;
  height: 84rpx;
  background-color: #fff;
  /* border: 2rpx solid #FFFFFF; */
}

.upload-main .tools image {
  width: 36rpx;
  height: 26rpx;
}

.upload-btn {
  width: 400rpx;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(360deg, #000000 0%, #2B2B2B 100%);
  margin: 35rpx auto 0;
}

.upload-btn.disabled {
  opacity: .5;
}