.tips-box-index{
  text-align: center;
}
.tips-box-index .body{
  position: relative;
  width: 556rpx;
  height: 696rpx;
  margin: 0 auto;
}

.tips-box-index .bg-img{
  width: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.tips-box-index .body .tips-content{
  padding: 56rpx 100rpx;
  height: 100%;
  box-sizing: border-box;
}
.tips-box-index .tips-btn{
  width: 400rpx;
	height: 92rpx;
	line-height: 92rpx;
	background-image: linear-gradient(0deg, 
		#000000 0%, 
    #2b2b2b 100%);
  color: #fff;   
  margin: 0 auto;   
  margin-top: 46rpx;  
}